package org.drools.games.invaders4;

import org.drools.games.KeyPressed
import org.drools.games.Run
import org.drools.games.GameUI

global GameUI ui

dialect "mvel"

rule "init" when
then
    insert( new Run() );
    setFocus( "Init" );
end

rule GameLoop when
    r : Run()
then
    setFocus( "Draw" );
    setFocus( "Move" );
    setFocus( "Keys" );
end


rule Draw when
    r : Run()
then
    ui.show();
    modify( r ) {} // force loop
end